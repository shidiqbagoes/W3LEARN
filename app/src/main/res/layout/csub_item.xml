<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    android:elevation="3dp"
    android:id="@+id/parentLayout"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/bgquizbg">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/csubitem"
            android:layout_marginTop="17dp"
            android:textSize="16sp"
            android:textColor="#FF0A4065"
            android:text="Sub Item"
            android:fontFamily="@font/montserratmediumxml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cdescitem"
            android:textSize="13sp"
            android:fontFamily="@font/montserratlightxml"
            android:textColor="#ADADAD"
            android:layout_marginTop="4dp"
            android:text="Description Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>