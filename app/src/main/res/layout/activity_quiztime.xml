<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".quiz.QuizTime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W3Quiz"
            android:textSize="22sp"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/montserratmediumxml"
            android:textColor="#000"
            android:layout_gravity="center"/>
        <View
            android:id="@+id/vInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="82dp"
            android:background="@drawable/ic_info_outline_black_24dp"
            android:layout_gravity="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Question Number 1"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/montserratregulerxml"
        android:textColor="#000"
        android:layout_gravity="center"/>

    
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/bgquiz"
        android:layout_width="325dp"
        android:layout_height="155dp"
        android:layout_marginTop="15dp"
        android:elevation="5dp"
        app:shape_roundRect_bottomLeftRadius="20dp"
        app:shape_roundRect_bottomRightRadius="20dp"
        app:shape_roundRect_topLeftRadius="20dp"
        app:shape_roundRect_topRightRadius="20dp"
        android:layout_gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgquizbg"/>
        <TextView
            android:id="@+id/soal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The First Question Of The Quiz\n will be shown here this is dummy\n text forget it."
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserratregulerxml"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginTop="-30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose The Right Answer"
            android:fontFamily="@font/montserratmediumxml"
            android:textSize="13sp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"/>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/answer1"
    android:layout_width="325dp"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:elevation="5dp"
    android:background="@drawable/bgquizbg"
    app:shape_roundRect_bottomLeftRadius="20dp"
    app:shape_roundRect_bottomRightRadius="20dp"
    app:shape_roundRect_topLeftRadius="20dp"
    app:shape_roundRect_topRightRadius="20dp"
    android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgquizbg">

    <TextView
        android:id="@+id/jawa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="The Question No 1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/montserratregulerxml"
        android:textSize="13sp"
        />
        </LinearLayout>


</com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/answer2"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:background="@drawable/bgquizbg"
        app:shape_roundRect_bottomLeftRadius="20dp"
        app:shape_roundRect_bottomRightRadius="20dp"
        app:shape_roundRect_topLeftRadius="20dp"
        app:shape_roundRect_topRightRadius="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgquizbg">


        <TextView
            android:id="@+id/jawb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="The Question No 2"
            android:autoSizeTextType="uniform"
            android:textColor="#000"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratregulerxml"
            android:textSize="13sp"
            />
        </LinearLayout>


    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/answer3"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:background="@drawable/bgquizbg"
        app:shape_roundRect_bottomLeftRadius="20dp"
        app:shape_roundRect_bottomRightRadius="20dp"
        app:shape_roundRect_topLeftRadius="20dp"
        app:shape_roundRect_topRightRadius="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgquizbg">

        <TextView
            android:id="@+id/jawc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The Question No 3"
            android:textColor="#000"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratregulerxml"
            android:textSize="13sp"
            />
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/answer4"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:background="@drawable/bgquizbg"
        app:shape_roundRect_bottomLeftRadius="20dp"
        app:shape_roundRect_bottomRightRadius="20dp"
        app:shape_roundRect_topLeftRadius="20dp"
        app:shape_roundRect_topRightRadius="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgquizbg">

        <TextView
            android:id="@+id/jawd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The Question No 4"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:fontFamily="@font/montserratregulerxml"
            android:textSize="13sp"
            />
        </LinearLayout>


    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <ImageView
        android:layout_width="420dp"
        android:layout_height="262dp"
        android:layout_marginTop="-400dp"
        android:background="@drawable/bgquiz" />

</LinearLayout>