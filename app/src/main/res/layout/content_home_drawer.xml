<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".home_drawer"
    android:orientation="vertical"
    android:background="#fafafa"
    tools:showIn="@layout/app_bar_home_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@drawable/headerstylegray">

        <TextView
            android:id="@+id/htitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here"
            android:fontFamily="@font/montserratmediumxml"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="63dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/htitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Learn"
            android:fontFamily="@font/montserratmediumxml"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/hsubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belajar Mudah Pemahaman pun mudah"
            android:fontFamily="@font/montserratregulerxml"
            android:textSize="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="40dp"
            android:textColor="#fff"/>
    </LinearLayout>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/searchshape"
            android:elevation="5dp"
            android:queryHint="Search Something Here"/>

    <TextView
        android:id="@+id/cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML"
        android:textSize="24dp"
        android:fontFamily="@font/montserratmediumxml"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="30dp"/>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/html"
            android:layout_width="315dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:elevation="6dp"
            app:shape_roundRect_bottomLeftRadius="25dp"
            app:shape_roundRect_bottomRightRadius="25dp"
            app:shape_roundRect_topLeftRadius="25dp"
            app:shape_roundRect_topRightRadius="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/html" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/cname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSS"
            android:textSize="24dp"
            android:fontFamily="@font/montserratmediumxml"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="30dp"/>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/css"
            android:layout_width="315dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:elevation="6dp"
            app:shape_roundRect_bottomLeftRadius="25dp"
            app:shape_roundRect_bottomRightRadius="25dp"
            app:shape_roundRect_topLeftRadius="25dp"
            app:shape_roundRect_topRightRadius="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/css" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>
        <TextView
            android:id="@+id/cname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:textSize="24dp"
            android:fontFamily="@font/montserratmediumxml"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="30dp"/>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/quiz"
            android:layout_width="315dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:layout_marginBottom="40dp"
            app:shape_roundRect_bottomLeftRadius="25dp"
            app:shape_roundRect_bottomRightRadius="25dp"
            app:shape_roundRect_topLeftRadius="25dp"
            app:shape_roundRect_topRightRadius="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quiz" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

    </LinearLayout>

</ScrollView>